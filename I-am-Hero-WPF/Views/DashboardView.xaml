<UserControl x:Class="I_am_Hero_WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:I_am_Hero_WPF.Properties" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <!-- Динамический Dashboard -->
        <Canvas Grid.Row="1" Grid.Column="1" Background="#f2f2f2" Name="MainCanvas" Loaded="MainCanvas_Loaded" SizeChanged="MainCanvas_SizeChanged">
            <!-- Profile -->
            <Grid x:Name="ProfileBlock" Canvas.Left="10" Canvas.Top="10" Canvas.ZIndex="2" Margin="5"
                    Width="250" Height="210" Background="White"
                    MouseLeftButtonDown="Block_MouseLeftButtonDown"
                    MouseMove="Block_MouseMove"
                    MouseLeftButtonUp="Block_MouseLeftButtonUp">
                <Grid.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,250,150"/>
                </Grid.Clip>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountCircle" Width="48" Height="48" Padding="10" Margin="10"
                                 Foreground="{DynamicResource PrimaryHueMidBrush}" />
                    <StackPanel Orientation="Vertical" Margin="10">
                        <TextBlock Text="{Binding HeroName}" FontSize="20" FontWeight="Bold"/>
                        <ProgressBar Minimum="0" Maximum="100" Value="{Binding HeroExperience}" Height="20" Width="100"/>
                        <TextBlock Text="{Binding HeroExperience, StringFormat='{}{0}/100 exp'}" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>

                <Thumb Width="10" Height="10" Background="Gray" Margin="10"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        DragDelta="Thumb_DragDelta"/>
            </Grid>

            <!-- Skills -->
            <Grid x:Name="SkillsBlock" Canvas.Left="250" Canvas.Top="10" Canvas.ZIndex="2" Margin="5"
                    Width="250" Height="210" Background="White"
                    MouseLeftButtonDown="Block_MouseLeftButtonDown"
                    MouseMove="Block_MouseMove"
                    MouseLeftButtonUp="Block_MouseLeftButtonUp">
                <Grid.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,250,150"/>
                </Grid.Clip>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Навыки" FontSize="16" FontWeight="Bold"/>
                        <Button Content="+" Command="{Binding OpenSkillModalCommand}" Width="20" Height="20" Margin="5,0,0,0"/>
                    </StackPanel>

                    <ListView ItemsSource="{Binding Skills}" HorizontalContentAlignment="Stretch" Margin="5">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5" HorizontalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Grid.Row="0" Grid.Column="0" />

                                    <TextBlock Text="Level" Grid.Row="0" Grid.Column="1" Foreground="Gray" Margin="10,0,0,0"/>


                                    <ProgressBar Grid.Row="1" Grid.ColumnSpan="2" 
                                                 Value="{Binding Experience}" Maximum="100" 
                                                 Height="10" Margin="0,5,0,0" HorizontalAlignment="Stretch"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <Thumb Width="10" Height="10" Background="Gray" Margin="10"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        DragDelta="Thumb_DragDelta"/>
            </Grid>

            <!-- Calendar -->
            <Grid x:Name="CalendarBlock" Canvas.Left="10" Canvas.Top="180" Canvas.ZIndex="2" Margin="5"
                    Width="250" Height="210" Background="White"
                    MouseLeftButtonDown="Block_MouseLeftButtonDown"
                    MouseMove="Block_MouseMove"
                    MouseLeftButtonUp="Block_MouseLeftButtonUp">
                <Grid.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,250,150"/>
                </Grid.Clip>
                <StackPanel Margin="10">
                    <TextBlock Text="Календарь" FontSize="16" FontWeight="Bold"/>
                    <Calendar DisplayMode="Month" IsTodayHighlighted="True"/>
                </StackPanel>

                <Thumb Width="10" Height="10" Background="Gray" Margin="10"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        DragDelta="Thumb_DragDelta"/>
            </Grid>

            <!-- Quests -->
            <Grid x:Name="QuestsBlock" Canvas.Left="250" Canvas.Top="180" Canvas.ZIndex="2" Margin="5"
                    Width="250" Height="210" Background="White"
                    MouseLeftButtonDown="Block_MouseLeftButtonDown"
                    MouseMove="Block_MouseMove"
                    MouseLeftButtonUp="Block_MouseLeftButtonUp">
                <Grid.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,250,150"/>
                </Grid.Clip>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Квесты" FontSize="16" FontWeight="Bold"/>
                        <Button Content="+" Command="{Binding OpenQuestModalCommand}" Width="20" Height="20" Margin="5,0,0,0"/>
                    </StackPanel>
                    <ListView ItemsSource="{Binding Quests}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" FontStyle="Italic"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <Thumb Width="10" Height="10" Background="Gray" Margin="10"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        DragDelta="Thumb_DragDelta"/>
            </Grid>

            <!-- Attributes -->
            <Grid x:Name="AttributesBlock" Canvas.Left="500" Canvas.Top="10" Canvas.ZIndex="2" Margin="5"
            Width="250" Height="210" Background="White"
            MouseLeftButtonDown="Block_MouseLeftButtonDown"
            MouseMove="Block_MouseMove"
            MouseLeftButtonUp="Block_MouseLeftButtonUp">
                <Grid.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,250,150"/>
                </Grid.Clip>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Аттрибуты" FontSize="16" FontWeight="Bold"/>
                        <Button Content="+" Command="{Binding OpenAttributeModalCommand}" Width="20" Height="20" Margin="5,0,0,0"/>
                    </StackPanel>
                    <ListView ItemsSource="{Binding Attributes}" HorizontalContentAlignment="Stretch" Margin="5">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5" HorizontalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Grid.Row="0" Grid.Column="0" />

                                    <TextBlock Text="{Binding Description}" Grid.Row="0" Grid.Column="1" Foreground="Gray" Margin="10,0,0,0"/>


                                    <ProgressBar Grid.Row="1" Grid.ColumnSpan="2" Minimum="{Binding MinValue}"
                                                 Value="{Binding Value}" Maximum="{Binding MaxValue}" 
                                                 Height="10" Margin="0,5,0,0" HorizontalAlignment="Stretch"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <Thumb Width="10" Height="10" Background="Gray" Margin="10"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                DragDelta="Thumb_DragDelta"/>
            </Grid>
        </Canvas>

        <!-- Затемняющий фон -->
        <Border Background="#80000000" Visibility="{Binding IsModalOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
                Grid.RowSpan="2" Grid.ColumnSpan="2"/>

        <!-- Модальное окно AddSkill -->
        <Grid Width="350" Height="300" Background="White" 
              Visibility="{Binding IsSkillModalOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
              HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Добавить навык" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

            <!-- Форма ввода -->
            <StackPanel Grid.Row="1" Margin="10">
                <TextBlock Text="Название навыка:"/>
                <TextBox Text="{Binding SkillName, UpdateSourceTrigger=PropertyChanged}" Width="300"/>

                <TextBlock Text="Описание:" Margin="0,10,0,0"/>
                <TextBox Text="{Binding SkillDescription, UpdateSourceTrigger=PropertyChanged}" Width="300" Height="60" TextWrapping="Wrap"/>

                <TextBlock Text="Опыт (exp):" Margin="0,10,0,0"/>
                <TextBox Text="{Binding SkillExperience, UpdateSourceTrigger=PropertyChanged}" Width="300"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Добавить" Command="{Binding AddSkillCommand}" Width="100" Margin="5"/>
                <Button Content="Отмена" Command="{Binding CloseSkillModalCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </Grid>

        <!-- Модальное окно AddQuest -->
        <Grid Width="350" Height="300" Background="White" 
              Visibility="{Binding IsQuestModalOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
              HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Добавить квест" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

            <!-- Форма ввода -->
            <StackPanel Grid.Row="1" Margin="10">
                <TextBlock Text="Название квеста:"/>
                <TextBox Text="{Binding QuestTitle, UpdateSourceTrigger=PropertyChanged}" Width="300"/>

                <TextBlock Text="Описание:" Margin="0,10,0,0"/>
                <TextBox Text="{Binding QuestDescription, UpdateSourceTrigger=PropertyChanged}" Width="300" Height="60" TextWrapping="Wrap"/>

                <TextBlock Text="Опыт (exp):" Margin="0,10,0,0"/>
                <TextBox Text="{Binding QuestExperience, UpdateSourceTrigger=PropertyChanged}" Width="300"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Добавить" Command="{Binding AddQuestCommand}" Width="100" Margin="5"/>
                <Button Content="Отмена" Command="{Binding CloseQuestModalCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </Grid>

        <!-- Модальное окно AddAttribute -->
        <Grid Width="350" Height="Auto" Background="White" 
              Visibility="{Binding IsAttributeModalOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
              HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Добавить аттрибут" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

            <!-- Форма ввода -->
            <StackPanel Grid.Row="1" Margin="10">
                <TextBlock Text="Название аттрибута:"/>
                <TextBox Text="{Binding AttributeName, UpdateSourceTrigger=PropertyChanged}" Width="300"/>

                <TextBlock Text="Описание:" Margin="0,10,0,0"/>
                <TextBox Text="{Binding AttributeDescription, UpdateSourceTrigger=PropertyChanged}" Width="300" Height="60" TextWrapping="Wrap"/>

                <TextBlock Text="Минимальное значение:" Margin="0,10,0,0"/>
                <TextBox Text="{Binding AttributeMinValue, UpdateSourceTrigger=PropertyChanged}" Width="300"/>

                <TextBlock Text="Максимальное значение:" Margin="0,10,0,0"/>
                <TextBox Text="{Binding AttributeMaxValue, UpdateSourceTrigger=PropertyChanged}" Width="300"/>

                <TextBlock Text="Текущее значение:" Margin="0,10,0,0"/>
                <TextBox Text="{Binding AttributeValue, UpdateSourceTrigger=PropertyChanged}" Width="300"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Добавить" Command="{Binding AddAttributeCommand}" Width="100" Margin="5"/>
                <Button Content="Отмена" Command="{Binding CloseAttributeModalCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
