<Page x:Class="I_am_Hero_WPF.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:c="clr-namespace:I_am_Hero_WPF.Properties" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Main Page">

    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <!-- Основная сетка -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Margin="10">
            <Label Content="I am Hero" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource PrimaryHueMidBrush}" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Log out" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="14"/>
                <Button Command="{Binding LogoutCommand}"
                        Style="{StaticResource MaterialDesignIconButton}" 
                        ToolTip="Выход" 
                        Width="40" Height="40">
                    <materialDesign:PackIcon Kind="Close" Width="24" Height="24"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Динамический Dashboard -->
        <Canvas Grid.Row="1" Background="#f2f2f2" Name="MainCanvas" Loaded="MainCanvas_Loaded" SizeChanged="MainCanvas_SizeChanged">
            <!-- Блок: Профиль -->
            <Border Canvas.Left="50" Canvas.Top="50" Width="250" Height="150"
                        Canvas.ZIndex="2"
                    Background="White" CornerRadius="8" Padding="10"
                    MouseLeftButtonDown="Block_MouseLeftButtonDown"
                    MouseMove="Block_MouseMove"
                    MouseLeftButtonUp="Block_MouseLeftButtonUp">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountCircle" Width="48" Height="48"
                                             Foreground="{DynamicResource PrimaryHueMidBrush}" />
                        <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                            <TextBlock Text="{Binding HeroName}" FontSize="20" FontWeight="Bold"/>
                            <ProgressBar Minimum="0" Maximum="100" Value="{Binding Experience}" Height="20" Width="200"/>
                            <TextBlock Text="{Binding Experience, StringFormat='{}{0}/100 exp'}" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                    </StackPanel>

                    <Thumb Width="10" Height="10" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                       DragDelta="Thumb_DragDelta" Background="Gray"/>
                </Grid>
            </Border>

            <!-- Блок: Навыки -->
            <Border Canvas.Left="350" Canvas.Top="50" Width="300" Height="200" Canvas.ZIndex="2"
                    Background="White" CornerRadius="8" Padding="10"
                    MouseLeftButtonDown="Block_MouseLeftButtonDown"
                    MouseMove="Block_MouseMove"
                    MouseLeftButtonUp="Block_MouseLeftButtonUp">
                <Grid>

                    <StackPanel>
                        <TextBlock Text="Навыки" FontSize="16" FontWeight="Bold"/>
                        <Button Content="+" Command="{Binding AddSkillCommand}" Width="20" Height="20"/>
                        <ListView ItemsSource="{Binding Skills}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" Width="150"/>
                                        <ProgressBar Width="150" Height="20" Value="{Binding Experience}" Maximum="100"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <Thumb Width="10" Height="10" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                       DragDelta="Thumb_DragDelta" Background="Gray"/>
                </Grid>
            </Border>

            <!-- Блок: Календарь -->
            <Border Canvas.Left="50" Canvas.Top="250" Width="300" Height="300" Canvas.ZIndex="2"
                    Background="White" CornerRadius="8" Padding="10"
                    MouseLeftButtonDown="Block_MouseLeftButtonDown"
                    MouseMove="Block_MouseMove"
                    MouseLeftButtonUp="Block_MouseLeftButtonUp">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="Календарь" FontSize="16" FontWeight="Bold"/>
                        <Calendar DisplayMode="Month" IsTodayHighlighted="True"/>
                    </StackPanel>

                    <Thumb Width="10" Height="10" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                       DragDelta="Thumb_DragDelta" Background="Gray"/>
                </Grid>
            </Border>

            <!-- Блок: Квесты -->
            <Border Canvas.Left="400" Canvas.Top="250" Width="300" Height="300" Canvas.ZIndex="2"
                    Background="White" CornerRadius="8" Padding="10"
                    MouseLeftButtonDown="Block_MouseLeftButtonDown"
                    MouseMove="Block_MouseMove"
                    MouseLeftButtonUp="Block_MouseLeftButtonUp">
                <Grid>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Квесты" FontSize="16" FontWeight="Bold"/>
                            <Button Content="+" Command="{Binding AddQuestCommand}" Width="20" Height="20"/>
                        </StackPanel>
                        <ListView ItemsSource="{Binding Quests}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Description}" FontStyle="Italic"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <Thumb Width="10" Height="10" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                       DragDelta="Thumb_DragDelta" Background="Gray"/>
                </Grid>
            </Border>

        </Canvas>
    </Grid>
</Page>
