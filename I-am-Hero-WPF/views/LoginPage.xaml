<Page x:Class="I_am_Hero_WPF.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login Page">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Авторизация" FontSize="20" Margin="0,0,0,20" HorizontalAlignment="Center" />

            <TextBox Text="{Binding Email}" Margin="0,0,0,10" />
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"
                         PasswordChanged="PasswordBox_PasswordChanged" />

            <Button Content="Войти" Command="{Binding LoginCommand}" />
            <Button Content="Регистрация" Margin="0,10,0,0" Click="GoToRegisterPage" />
        </StackPanel>
    </Grid>
</Page>